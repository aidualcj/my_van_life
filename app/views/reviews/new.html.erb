<h1>Ajouter un Avis</h1>
<%= form_with model: [@booking, @review], local: true do |form| %>
  <div>
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5 %>
  </div>
  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>
  <div>
    <%= form.submit 'Soumettre' %>
  </div>
<% end %>
<%= link_to 'Retour', van_path(@booking.van) %>
