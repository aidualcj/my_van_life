<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3>Reservation validée</h3>
        </div>
        <div class="card-body">
          <h5>Vos informations</h5>
          <ul class="list-unstyled">
            <li><strong>Nom:</strong> <%= @booking.user.name %></li>
            <li><strong>Téléphone:</strong> <%= @booking.user.phone %></li>
            <li><strong>Email:</strong> <%= @booking.user.email %></li>
            <li><strong>Date de naissance:</strong> <%= @booking.user.birthdate.strftime("%d %B %Y") %> | <%= @booking.user.age %> ans</li>
            <li><strong>Adresse:</strong> <%= @booking.user.address %></li>
          </ul>
          <h5>Commentaire</h5>
          <p><%= @booking.comment %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Modifier les informations', edit_user_registration_path, class: 'btn btn-secondary' %>
          <%= link_to 'Annuler la réservation', booking_path(@booking), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <img src="<%= @booking.van.image_url %>" class="img-fluid" alt="Van image">
          <h5>Informations</h5>
          <ul class="list-unstyled">
            <li><strong>Téléphone:</strong> <%= @booking.van.owner_phone %></li>
            <li><strong>Adresse:</strong> <%= @booking.van.owner_address %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
