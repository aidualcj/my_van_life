<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3>Reservation validée</h3>
        </div>
        <div class="card-body">
          <h5>Vos informations</h5>
          <ul class="list-unstyled">
            <li><strong>Nom:</strong> <%= @booking.user.name %></li>
            <li><strong>Téléphone:</strong> <%= @booking.user.phone_number %></li>
            <li><strong>Email:</strong> <%= @booking.user.email %></li>
            <li><strong>Adresse:</strong> <%= @booking.user.address %></li>
            <li><strong>Prix: </strong><%= @booking.price.to_i %>€</li>
          </ul>
        </div>
        <div class="card-footer">
          <%= link_to 'Modifier les informations', edit_user_registration_path, class: 'btn btn-secondary' %>
          <%= link_to 'Annuler la réservation', booking_path(@booking), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <% if @booking.van.photos.attached? %>
            <%= cl_image_tag @booking.van.photos[0].key, class: "img-fluid"%>
          <% else %>
            <%= image_tag 'roadpass-zRetWvOnbf0-unsplash.jpg', class: "img-fluid" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
